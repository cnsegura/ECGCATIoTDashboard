@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    //auto refresh kafka consumer script
    $(document).ready(function () {
        WireEvents();
    });
    function WireEvents() {
        setInterval("$('#logArea').load('/Kafka/InitConsumer')", 3000);
    }

</script>

<h2>Index</h2>

<table border=1 width=500 cellpadding=10>
    <tr>
        <td colspan="2">
            <p>View sensor data as it is stored within Kafka. Note the offset, topic and partition information... More insight here... </p>
        </td>

    </tr>
    <tr>
        <td>
            <p>
                @Ajax.ActionLink("Start Consumer","InitConsumer", new AjaxOptions()
                                                                    {
                                                                        HttpMethod = "GET",
                                                                        UpdateTargetId = "logArea",
                                                                        InsertionMode = InsertionMode.InsertAfter
                                                                    })

            </p>
        </td>
        <td>
            <p><input type="button" id="submit" name="submit" value="submit"  /></p>
        </td>
    </tr>
    <tr>
        <td colspan=2 id="logArea" >

        </td>
    </tr>
</table>




